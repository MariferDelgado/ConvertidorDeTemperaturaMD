<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="facci.com.conversordetemperaturamd.MainActivityMD"
    android:background="@mipmap/marifer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temperatura en 째C"
        android:id="@+id/txtTemperatura"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textStyle="bold"
        android:enabled="false"
        android:textSize="30sp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/txtTemperatura"
        android:layout_marginTop="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0,0 째C"
        android:id="@+id/txtRecebeTemp"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir"
        android:id="@+id/btnConverter"
        android:layout_marginTop="47dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtRecebeTemp"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0,0 째F"
        android:id="@+id/txtFarenheit"
        android:layout_marginTop="61dp"
        android:textStyle="bold"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textSize="20sp"
        android:layout_below="@+id/btnConverter"
        android:layout_toStartOf="@+id/btnConverter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0,0 째K"
        android:id="@+id/txtKelvin"
        android:textStyle="bold"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:background="@color/abc_primary_text_disable_only_material_light"
        android:textSize="20sp"
        android:layout_alignTop="@+id/txtFarenheit"
        android:layout_toEndOf="@+id/btnConverter" />

</RelativeLayout>
